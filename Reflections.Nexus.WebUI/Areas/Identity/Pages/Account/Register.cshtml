@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<body>
   
    <!-- Page content -->
    <div class="page-content">
        <!-- Main content -->
        <div class="content-wrapper">
            <!-- Inner content -->
            <div class="content-inner">
                <!-- Content area -->
                <div class="content d-flex justify-content-center align-items-center">
                    <!-- Registration form -->
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="flex-fill">
                        <div class="row">
                            <div class="col-lg-6 offset-lg-3">
                                <div class="card mb-0">
                                    <div class="card-body">
                                        <div class="text-center mb-3">
                                            <div class="d-inline-flex align-items-center justify-content-center mb-4 mt-2">
                                                <img src="~/Images/logo_icon.svg" class="h-48px" alt="">
                                            </div>
                                            <h5 class="mb-0">Create an Account</h5>
                                            <span class="d-block text-muted">All fields are required</span>
                                        </div>

                                        <!-- Validation summary -->
                                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                                        <!-- First Name -->
                                        <div class="mb-3">
                                            <label asp-for="Input.FirstName" class="form-label">First Name</label>
                                            <div class="form-control-feedback form-control-feedback-start">
                                                <input asp-for="Input.FirstName" class="form-control" placeholder="Enter your first name" />
                                                <div class="form-control-feedback-icon">
                                                    <i class="ph-user-circle-plus text-muted"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                        </div>

                                        <!-- Last Name -->
                                        <div class="mb-3">
                                            <label asp-for="Input.LastName" class="form-label">Last Name</label>
                                            <div class="form-control-feedback form-control-feedback-start">
                                                <input asp-for="Input.LastName" class="form-control" placeholder="Enter your last name" />
                                                <div class="form-control-feedback-icon">
                                                    <i class="ph-user-circle-plus text-muted"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                        </div>

                                        <!-- Email -->
                                        <div class="mb-3">
                                            <label asp-for="Input.Email" class="form-label">Email</label>
                                            <div class="form-control-feedback form-control-feedback-start">
                                                <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                                                <div class="form-control-feedback-icon">
                                                    <i class="ph-at text-muted"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>

                                        <!-- Password -->
                                        <div class="mb-3">
                                            <label asp-for="Input.Password" class="form-label">Password</label>
                                            <div class="form-control-feedback form-control-feedback-start">
                                                <input asp-for="Input.Password" type="password" class="form-control" placeholder="•••••••••••" />
                                                <div class="form-control-feedback-icon">
                                                    <i class="ph-lock text-muted"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>

                                        <!-- Confirm Password -->
                                        <div class="mb-3">
                                            <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                                            <div class="form-control-feedback form-control-feedback-start">
                                                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="•••••••••••" />
                                                <div class="form-control-feedback-icon">
                                                    <i class="ph-lock text-muted"></i>
                                                </div>
                                            </div>
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>

                                        <!-- External Logins -->
                                        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                                        {
                                            <div class="text-center text-muted content-divider mb-3">
                                                <span class="px-2">Or sign up with</span>
                                            </div>
                                            <div class="text-center mb-3">
                                                @foreach (var provider in Model.ExternalLogins)
                                                {
                                                    <button type="submit" class="btn btn-outline-primary btn-icon rounded-pill border-width-2">
                                                        @provider.DisplayName
                                                    </button>
                                                }
                                            </div>
                                        }

                                        <!-- Submit button -->
                                        <div class="card-body text-end border-top">
                                            <button id="registerSubmit" type="submit" class="btn btn-primary w-100">
                                                <i class="ph-plus me-2"></i>
                                                Register
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- /registration form -->
                </div>
                <!-- /content area -->
            </div>
            <!-- /inner content -->
        </div>
        <!-- /main content -->
    </div>
    <!-- /page content -->
    <!-- Validation Scripts -->
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
