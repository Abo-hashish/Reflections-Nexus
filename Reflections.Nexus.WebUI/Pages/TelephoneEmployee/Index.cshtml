@page
@model Reflections.Nexus.WebUI.Pages.TelephoneEmployee.IndexModel

@{
    ViewData["Title"] = "Employee Telephone Numbers";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header pb-0">
        <h5 class="mb-0">Employee Telephone Numbers List</h5>
    </div>
    <div class="table-responsive">
        <table class="table datatable table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.EmployeeTelephoneNumber[0].Id)</th>
                    <th>@Html.DisplayNameFor(model => model.EmployeeTelephoneNumber[0].IsPrimary)</th>
                    <th>@Html.DisplayNameFor(model => model.EmployeeTelephoneNumber[0].Number)</th>
                    <th>Employee Full Name</th> <!-- New Column -->
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.EmployeeTelephoneNumber)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.IsPrimary)</td>
                        <td>@Html.DisplayFor(modelItem => item.Number)</td>
                        <td>@item.Employee.FullName</td> <!-- Display Full Name -->
                        <td>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="text-primary">
                                <i class="icon-file-text2"></i> Details
                            </a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="text-pink">
                                <i class="icon-bin"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
