@page
@model Reflections.Nexus.WebUI.Pages.EmployeeManager.IndexModel

@{
    ViewData["Title"] = "List";
    ViewData["Entity"] = "Employees";
    ViewData["BreadCrumb"] = "<a href='/Employees' class='breadcrumb-item'>Employees</a>";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="card">
<div class="card-header pb-0">
        <h5 class="mb-0">Employees List</h5>
    </div>
<table class="table datatable table-striped table-hover table-bordered">
    <thead>
        <tr>
        <th>
                    @Html.DisplayNameFor(model => model.EmployeeManager[0].Id)
        </th>
            <th>
                    @Html.DisplayNameFor(model => model.EmployeeManager[0].FirstName)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.EmployeeManager[0].MiddleName)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.EmployeeManager[0].LastName)
            </th>
            
            <th>
                    @Html.DisplayNameFor(model => model.EmployeeManager[0].Address)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.EmployeeManager[0].BirthDate)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.EmployeeManager[0].JoiningDate)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.EmployeeManager[0].Identification)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.EmployeeManager[0].ExitDate)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.EmployeeManager[0].Email)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.EmployeeManager[0].Salary)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.EmployeeManager[0].MedicalInsurance)
            </th>
            
           
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeManager[0].Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeManager[0].CreatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeManager[0].Updated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeManager[0].UpdatedBy)
                </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model.EmployeeManager)
            {
        <tr>
         <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
                    
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoiningDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExitDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalInsurance)
            </td>
           
            
            
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Updated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedBy)
                    </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="text-teal"><i class="icon-pencil7"></i> Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id" class="text-primary"><i class="icon-file-text2"></i> Details</a> |

            </td>
        </tr>
}
    </tbody>
</table>
</div>
