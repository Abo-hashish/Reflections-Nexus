@page
@model Reflections.Nexus.WebUI.Pages.DepartmentStatistics.IndexModel

@{
    ViewData["Title"] = "List";
    ViewData["Entity"] = "Department Statistics";
    ViewData["BreadCrumb"] = "<a href='/Employees' class='breadcrumb-item'>Employees</a>";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header pb-0">
    </div>
    <div class="row">
        <div class="col-md-6">
            <table class="table datatable table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Data[0].Department)
                        </th>
                        <th>
                            Average Salary
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Department)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Statistic)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <table class="table datatable table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Data2[0].Department)
                        </th>
                        <th>
                            Employee Count
                        </th>
                        <th>
                            Percentage From all Employees
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data2)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Department)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Statistic)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Percentage)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


