@page
@model Reflections.Nexus.WebUI.Pages.ShowMyRequests.IndexModel

@{
    ViewData["Title"] = "List";
    ViewData["Entity"] = "EmployeeRequests";
    ViewData["BreadCrumb"] = "<a href='/EmployeeRequests' class='breadcrumb-item'>EmployeeRequests</a>";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-header pb-0">
        <h5 class="mb-0">EmployeeRequests List</h5>
    </div>
    <table class="table datatable table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].Fullname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data[0].Notes)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Data[0].Status)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fullname)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.Id" class="text-primary"><i class="icon-file-text2"></i> Details</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
