@page
@model Reflections.Nexus.WebUI.Pages.EmployeeRequest.IndexModel

@{
    ViewData["Title"] = "List";
    ViewData["Entity"] = "EmployeeRequests";
    ViewData["BreadCrumb"] = "<a href='/EmployeeRequests' class='breadcrumb-item'>EmployeeRequests</a>";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="card">
<div class="card-header pb-0">
        <h5 class="mb-0">EmployeeRequests List</h5>
    </div>
<table class="table datatable table-striped table-hover table-bordered">
    <thead>
        <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeRequest[0].Id)
        </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeRequest[0].Notes)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.EmployeeRequest[0].Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeRequest[0].Notification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeRequest[0].Status)
            </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeRequest[0].Created)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeRequest[0].CreatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeRequest[0].Updated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeRequest[0].UpdatedBy)
                </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EmployeeRequest) {
        <tr>
         <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notification.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Value)
            </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Updated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedBy)
                    </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id" class="text-primary"><i class="icon-file-text2"></i> Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id" class="text-pink"><i class="icon-bin"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
