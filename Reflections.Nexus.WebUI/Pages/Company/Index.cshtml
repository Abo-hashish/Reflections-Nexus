@page
@model Reflections.Nexus.WebUI.Pages.Company.IndexModel

@{
    ViewData["Title"] = "List";
    ViewData["Entity"] = "Companies";
    ViewData["BreadCrumb"] = "<a href='/Companies' class='breadcrumb-item'>Companies</a>";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="card">
<div class="card-header pb-0">
        <h5 class="mb-0">Companies List</h5>
    </div>
<table class="table datatable table-striped table-hover table-bordered">
    <thead>
        <tr>
        <th>
            @Html.DisplayNameFor(model => model.Company[0].Id)
        </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].EstablishDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Town)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Website)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CommercialRegistrationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].TaxRegistrationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].LogoUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CompanyType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Industry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Parent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].UpdatedBy)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Company) {
        <tr>
         <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstablishDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Town)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Website)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommercialRegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaxRegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LogoUrl)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyType.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industry.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Parent.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="text-teal"><i class="icon-pencil7"></i> Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id" class="text-primary"><i class="icon-file-text2"></i> Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id" class="text-pink"><i class="icon-bin"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
