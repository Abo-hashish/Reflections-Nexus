@page
@model Reflections.Nexus.WebUI.Pages.RecievedRequests.DetailsModel

@{
    ViewData["Title"] = "Details";
    ViewData["Entity"] = "EmployeeRequests";
    ViewData["BreadCrumb"] = "<a href='/EmployeeRequests' class='breadcrumb-item'>EmployeeRequests</a>";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="card">

    <div class="card-header">
        <h5 class="card-title mb-0">View EmployeeRequest Details</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-12">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-2  fw-bold">
                            @Html.DisplayNameFor(model => model.EmployeeRequest.Id)
                        </label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(model => model.EmployeeRequest.Id)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.EmployeeRequest.Notes)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.EmployeeRequest.Notes)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.EmployeeRequest.Created)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.EmployeeRequest.Created)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.EmployeeRequest.CreatedBy)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.EmployeeRequest.CreatedBy)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.EmployeeRequest.Updated)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.EmployeeRequest.Updated)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.EmployeeRequest.UpdatedBy)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.EmployeeRequest.UpdatedBy)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.EmployeeRequest.RowVersion)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.EmployeeRequest.RowVersion)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.EmployeeRequest.Employee)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.EmployeeRequest.Employee.Address)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.EmployeeRequest.Notification)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.EmployeeRequest.Notification.Message)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="col-lg-6">
                <fieldset>
                    <div class="form-group row col-form-label">
                        <label class="col-lg-4  fw-bold">
                            @Html.DisplayNameFor(model => model.EmployeeRequest.Status)
                        </label>
                        <div class="col-lg-8">
                            @Html.DisplayFor(model => model.EmployeeRequest.Status.Value)
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center bg-light border-top-0">
        <a asp-page="./Index" class="btn btn-primary btn-labeled btn-labeled-start">
            Back
            <span class="btn-labeled-icon bg-black bg-opacity-20">
                <i class="icon-arrow-left8"></i>
            </span>
        </a>
        <a asp-page="./Edit" class="btn btn-primary btn-labeled btn-labeled-end" asp-route-id="@Model.EmployeeRequest.Id">
            Edit
            <span class="btn-labeled-icon bg-black bg-opacity-20">
                <i class="icon-pencil7"></i>
            </span>
        </a>
    </div>
</div>

